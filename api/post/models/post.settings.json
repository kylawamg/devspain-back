{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "published_at": {
      "type": "date",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "comments": {
      "collection": "comment"
    },
    "category": {
      "model": "category"
    },
    "tags": {
      "collection": "tag"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    }
  }
}
